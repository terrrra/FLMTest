<Window x:Class="FLMDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:FLMDesktop.Views"
        Title="FLM Desktop"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF9FAFB">
     <Grid>
        <!-- Top app bar -->
        <Border Background="#FFFFFFFF" Height="58" VerticalAlignment="Top" Effect="{StaticResource SoftShadow}">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Branch Manager"
                           FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock x:Name="TitleBlock" Grid.Column="1" Text="Home"
                           Foreground="#6B7280" VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Frame x:Name="MainFrame" Margin="16,82,16,16" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>