<Page x:Class="FLMDesktop.Views.BranchesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FLMDesktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BranchPage">

    <Grid Margin="0,0,0,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header row -->
            <RowDefinition/>
            <!-- grid row -->
        </Grid.RowDefinitions>

        <!-- Header: Back + actions + search -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Margin="16,16,16,8" Padding="12">
            <DockPanel>
                <!-- Left: Back -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Style="{StaticResource BackButton}"
                        Content="Back to Home"
                        Padding="12,6"
                        FontSize="13"
                        Click="Back_Click"/>
                </StackPanel>

                <!-- Right: Search -->
                <DockPanel DockPanel.Dock="Right">
                    <TextBox x:Name="SearchBox" Width="260" Margin="0,0,8,0"
                         VerticalContentAlignment="Center"
                         ToolTip="Search branches..."/>
                    <Button Style="{StaticResource ToolbarButton}" Content="Search" Click="Search_Click"/>
                </DockPanel>

                <!-- Middle: CRUD -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ToolbarButton}" Content="New" Click="New_Click"/>
                    <Button Style="{StaticResource ToolbarButton}" Content="Edit" Click="Edit_Click"/>
                    <Button Style="{StaticResource ToolbarButton}" Content="Delete" Click="Delete_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Data grid -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="16">
            <DataGrid x:Name="BranchesGrid"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  HeadersVisibility="All" GridLinesVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Telephone" Binding="{Binding TelephoneNumber}" Width="180"/>
                    <DataGridTextColumn Header="Open Date" Binding="{Binding OpenDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="160"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
